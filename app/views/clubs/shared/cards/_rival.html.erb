<% if duel.rival_id == @club.id %>
  <% rival = Club.find_by(id: duel.club_id) %>
<% else %>
  <% rival = Club.find_by(id: duel.rival_id) %>
<% end %>
<article class="_carde _soon">
	<aside class="_badge_carde _1">
		<p>Next opponent</p>	
	</aside>
	<div class="_inner">
		<div class="_in _1">
			<div class="row">
				<div class="col-12">
					<div class="_fila">
						<div class="_1">
							<div class="_info">
								<%= link_to club_path(rival), class: "_link" do %>
									<h3 class="_name"><%= rival.club_name %></h3>
								<% end %>
								<p class="_country"><%= rival.city %>, <%= rival.country %></p>
							</div>
						</div>
						<div class="_2 text-center">
							<p><span class="badge"><%= duel.status %></span></p>
							<p class="_date"><%= duel.start_date.strftime("%B %d, %Y") %></p>
							<p class="_time"><%= duel.start_date.strftime("%I:%M %p") %></p>
						</div>
						<div class="_3 text-end">
								<% if duel.duel_type == 'Bet' %>
									<% if duel.price.present? %>
										<h4 class="_bet"><span><%= duel.price %></span></h4>
									<% else %>
										<h4 class="_bet"><span>$0.00</span></h4>
									<% end %>
								<% elsif duel.duel_type == 'Tournament' %>
									<figure class="_type">
										<img src="https://d4s5cnqwbwfuf.cloudfront.net/assets/icons/3d/i/trofeo-94.png">
									</figure>
								<% elsif duel.duel_type == 'Mundial' %>
									<figure class="_type">
										<img src="https://d4s5cnqwbwfuf.cloudfront.net/assets/icons/3d/i/america-94.png">
									</figure>
								<% elsif duel.duel_type == 'League' %>
									<figure class="_type">
										<img src="https://d4s5cnqwbwfuf.cloudfront.net/assets/icons/3d/i/premio-94">
									</figure>
								<% else %>
									<figure class="_type">
										<i class="fad fa-handshake"></i>
									</figure>
								<% end %>
						</div>
					</div>
						

				</div>
			</div>
		</div>
	</div>
	<figure class="_shield">
		<%= image_tag rival.avatar.variant(resize_to_limit: [300, 300]) %>
	</figure>
	<%= link_to club_duel_path(@club, duel), class: "_link_hide" do %><% end %>
</article>