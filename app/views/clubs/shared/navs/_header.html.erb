<section class="_head _1">
	<div class="_inner _1">
		<%= link_to console_path, class: "_linkback" do %>
			<i class="bi bi-chevron-left"></i>
		<% end %>
		<div class="_info">
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb mb-0">
			    <% breadcrumbs.each do |breadcrumb| %>
			      <% if breadcrumb.path %>
			        <li class="breadcrumb-item"><h3 class="mb-0"><%= link_to breadcrumb.name, breadcrumb.path %></h3></li>
			      <% else %>
			        <li class="breadcrumb-item active" aria-current="page"><%= breadcrumb.name %></li>
			      <% end %>
			    <% end %>
			  </ol>
			</nav>
		</div>
	</div>
	<div class="_action">
    <%= link_to battle_path, class: "button--sacnite _2 _btn _medium m-0-auto" do %>
      <i class="fas fa-plus button__icon"></i>
    <% end %>
	</div>
</section>