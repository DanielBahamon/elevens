<% local = Club.find_by(id: duel.club_id) %>
<% guess = Club.find_by(id: duel.rival_id) %>
<article class="_view" id="_duel-<%= duel.id %>">
	<section class="_cont _1">
    <div class="_1">
      <div class="_i">
        <p class="_mutted"><%= duel.city.capitalize %>, <%= duel.country.capitalize %></p>
      </div>
      <div class="_ii">
        <p class="_mutted">en <%= duel.time_remaining %></p>
      </div>
    </div>
		<div class="_2">
			<div class="_i">
				<div class="_in">
	        <%= link_to club_duel_path(local.id, duel) do %>
						<img src="<%= local.avatar %>" class="_shield _1">
	        <% end %>
				</div>
			</div>
			<div class="_iii">
	      <%= link_to club_duel_path(guess.id, duel) do %>
					<p class="_date"><%= duel.start_date.strftime("%B %d, %Y") %></p>
					<p class="_time"><%= duel.start_date.strftime("%I:%M %p") %></p>
				<% end %>
			</div>
			<div class="_ii">
				<div class="_in">
	        <%= link_to club_duel_path(guess.id, duel) do %>
						<img src="<%= guess.avatar %>" class="_shield _1">
	        <% end %>
				</div>
			</div>
			
		</div>
		<div class="_3">
			<div class="_i">
	      <div class="_data">
					<%= link_to club_duel_path(local.id, duel), class: "_typematch" do %>
						<% if duel.duel_type == "Friendly" %>
		          <figure>
								<i class="fad fa-handshake-alt"></i>
		          </figure>
		          <p class="_annun">Amistoso</p>
						<% elsif duel.duel_type == "Bet" %>
		          <figure>
								<i class="fad fa-sack-dollar"></i>
		          </figure>
		          <p class="_annun">Apuesta</p>
						<% elsif duel.duel_type == "Tournament" %>
		          <figure>
								<i class="fad fa-trophy-alt"></i>
		          </figure>
		          <p class="_annun">Torneo</p>
						<% elsif duel.duel_type == "League" %>
		          <figure>
								<i class="fad fa-award"></i>
		          </figure>
		          <p class="_annun">Liga</p>
						<% elsif duel.duel_type == "Mundial" %>
		          <figure>
								<i class="fal fa-globe-americas"></i>
		          </figure>
		          <p class="_annun">Campeonato Mundial</p>
						<% end %>
					<% end %>
	      </div>
			</div>
			<div class="_ii">
				<div class="_result">
	        <%= link_to club_duel_path(guess.id, duel) do %>
						<% if (duel.start_date - DateTime.now).abs < 1.week %>
							<div class="_badge _temp">
								<i class="fad fa-clock"></i>
								<span>Esta semana</span>
							</div>
						<% else %>
							<div class="_badge _temp">
								<i class="fad fa-clock"></i>
								<span>Proximamente</span>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>

	</section>
</article>