<%= render "shared/layout/one" %>

  <section class="_console _1 _panel_duel">
    <aside class="_1">
      <div class="row">
        <div class="col-lg-12">
          <aside>
            <div class="_body_console _1">
              <div class="_cont">
                <% @referees.each do |referee| %>
                <% end %>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </aside>
  </section>


<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Name</th>
      <th>Position</th>
      <th>Active</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referees.each do |referee| %>
      <tr>
        <td><%= referee.slug %></td>
        <td><%= "#{referee.firstname} #{referee.lastname}" %></td>
        <td><%= referee.position %></td>
        <td><%= referee.active %></td>
        <td><%= referee.status %></td>
        <td><%= link_to 'Show', referee %></td>
        <td><%= link_to 'Edit', edit_referee_path(referee) %></td>
        <td>
          <%= form_with(model: referee, method: :delete) do |form| %>
            <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>
            <%= form.submit "Eliminar" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to "Unirse", referees_path, method: :post %>
<%= render "shared/layout/two" %>