<div class="row">
	<div class="col-12 _2">
		<div class="_cont">
			<% if @club.duels.count > 0 %>
				<% @club.duels.each do |duel| %>
					<div class="card mb-3">
						<div class="row g-0">
							<div class="col-md-4">
								<%= image_tag duel.cover_photo(:thumb), class: "img-fluid rounded-start" %>
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title"><%= duel.name %></h5>
									<p class="card-text"><%= duel.summary %></p>
									<p class="card-text"><small class="text-muted"><%= duel.referee_name %></small></p>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			<% else %>
				<h1>Aun no has creado equipos</h1>
			<% end %>
		</div>
	</div>
</div>