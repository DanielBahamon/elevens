<% local = Club.find_by(id: duel.club_id) %>
<article class="_prev" id="_prev-<%= duel.id %>">
	<section class="_cont _1">
    <div class="_1">
      <div class="_i">
        	<p class="_mutted">Editando</p>
      </div>
      <div class="_ii">
				<p class="_mutted">Expira en <%= @event_time2 %></p>
      </div>
    </div>
		<div class="_2">
      <div class="_i">
      	<div class="_in">
					<%= link_to conditions_club_duel_path(local, duel), class: "_typematch" do %>
						<h4 class="_title">Â¡Concreta el duelo y publicalo!</h4>
					<% end %>
      	</div>
      </div>
      <div class="_ii">
      </div>
		</div>
		<div class="_3">
			<div class="_i">
	      <div class="_data">
					<%= link_to conditions_club_duel_path(local, duel), class: "_typematch" do %>
						<% if duel.duel_type == "Friendly" %>
		          <figure>
								<i class="fad fa-handshake-alt"></i>
		          </figure>
		          <p class="_annun">Amistoso</p>
						<% elsif duel.duel_type == "Bet" %>
		          <figure>
								<i class="fad fa-sack-dollar"></i>
		          </figure>
		          <p class="_annun">Apuesta</p>
						<% elsif duel.duel_type == "Tournament" %>
		          <figure>
								<i class="fad fa-trophy-alt"></i>
		          </figure>
		          <p class="_annun">Torneo</p>
						<% elsif duel.duel_type == "League" %>
		          <figure>
								<i class="fad fa-award"></i>
		          </figure>
		          <p class="_annun">Liga</p>
						<% elsif duel.duel_type == "Mundial" %>
		          <figure>
								<i class="fal fa-globe-americas"></i>
		          </figure>
		          <p class="_annun">Campeonato Mundial</p>
						<% end %>
					<% end %>
	      </div>
			</div>
			<div class="_ii"></div>
		</div>
	</section>
</article>