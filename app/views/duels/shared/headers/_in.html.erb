<header class="_head">
    <div class="_1">
        <button class="_linkback" onclick="window.history.back();" type="button">
            <i class="bi bi-chevron-left"></i>
        </button>
        <%= link_to root_path, data: { no_turbolink: true }, class: "_logo _1 d-sm-none" do %>
          <%= image_tag '//d2ivxtccd0p0sz.cloudfront.net/assets/brand/v2/e.svg', class: "_light", alt: 'Entornes'%>
        <% end %>
    </div>
    <div class="_2">
        <% if @guess %>
            <h3 class="_title"><%= @local.club_name %> V.S <%= @guess.club_name %></h3>
        <% else %>
            <h3 class="_title">Previa de <%= @duel.club.club_name %></h3>
        <% end %>
    </div>
    <div class="_3 dropstart">
        <a class="_link dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
        </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <% if user_signed_in? && current_user == @duel.club.user %>
        <%= link_to conditions_club_duel_path, class: "dropdown-item" do %>
            Editar Duelo
        <% end %>
      <% else %>
        <a class="_link">Reportar</a>
      <% end %>
      </ul>
    </div>
</header>